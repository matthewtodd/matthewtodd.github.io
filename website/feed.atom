<?xml version="1.0" encoding="utf-8"?>
<feed xml:lang="en-US" xmlns="http://www.w3.org/2005/Atom">
  <id>http://matthewtodd.org</id>
  <link rel="alternate" type="text/html" href="http://matthewtodd.org" />
  <link rel="self" type="application/atom+xml" href="http://matthewtodd.org/feed.atom" />
  <logo>/images/matthewtodd_small.jpg</logo>
  <title>Matthew Todd</title>
  <subtitle>Software development and life in Moshi, Tanzania</subtitle>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <author>
    <name>Matthew Todd</name>
    <email>matthew.todd@gmail.com</email>
  </author>
  {% for post in site.posts limit:10 %}
  <entry>
    <id>http://matthewtodd.org{{ post.id }}</id>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <link rel="alternate" type="text/html" href="{{ post.url }}" />
    <title>{{ post.title }}</title>
    <content type="html">{{ post.content | xml_escape }}</content>
  </entry>
  {% endfor %}
</feed>